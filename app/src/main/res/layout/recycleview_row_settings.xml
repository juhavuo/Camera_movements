<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/row_recyclerview_title"
        android:text="title"
        style="@style/minor_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row_recyclerview_seekbar"
        android:layout_margin="25dp"
        app:layout_constraintTop_toBottomOf="@id/row_recyclerview_title"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/row_recyclerview_timespan_seekbar_min_text_view"
        android:text="min"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/row_recyclerview_seekbar"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/row_recyclerview_timespan_seekbar_max_text_view"
        android:text="max"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/row_recyclerview_seekbar"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>