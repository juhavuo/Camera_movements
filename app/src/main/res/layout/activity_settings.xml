<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/main_border">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_activity_title_text_view"
        android:text="@string/settings"
        style="@style/main_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_activity_timespan_title_textview"
        android:text="@string/activity_settings_timespan_title"
        style="@style/minor_title"
        app:layout_constraintTop_toBottomOf="@id/settings_activity_title_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settings_activity_timespan_seekbar"
        android:layout_margin="25dp"
        android:min="10"
        android:max="120"
        android:progress="30"
        app:layout_constraintTop_toBottomOf="@id/settings_activity_timespan_title_textview"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_activity_timespan_seekbar_min_text_view"
        android:text="10"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/settings_activity_timespan_seekbar"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_activity_timespan_seekbar_max_text_view"
        android:text="120"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/settings_activity_timespan_seekbar"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_back_button"
        android:text="@string/back_button"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>