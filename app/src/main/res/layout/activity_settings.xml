<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/main_border">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_activity_title_text_view"
        android:text="@string/settings"
        style="@style/main_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_activity_timespan_title_textview"
        android:text="@string/activity_settings_timespan_title"
        style="@style/minor_title"
        app:layout_constraintTop_toBottomOf="@id/settings_activity_title_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settings_activity_timespan_seekbar"
        android:layout_margin="25dp"
        android:min="@integer/timespan_min"
        android:max="@integer/timespan_max"
        android:progress="@integer/timespan_initial_value"
        app:layout_constraintTop_toBottomOf="@id/settings_activity_timespan_title_textview"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_activity_timespan_seekbar_min_text_view"
        android:text="min"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/settings_activity_timespan_seekbar"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_activity_timespan_seekbar_max_text_view"
        android:text="max"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/settings_activity_timespan_seekbar"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_activity_save_and_quit_button"
        android:text="@string/settings_activity_save_and_exit"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_activity_cancel_button"
        android:text="@string/settings_activity_cancel"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>